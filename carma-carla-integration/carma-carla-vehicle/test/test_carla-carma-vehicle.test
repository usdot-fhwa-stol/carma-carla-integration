<launch>
    <arg name='host' default='localhost'/>
    <arg name='port' default='2000'/>
    <arg name='enable_rosbag' default='False'/>
    <rosparam file="$(find carla-carma-vehicle)/config/settings.yaml" command="load" />
    <param name='enable_rosbag' type="boolean" value="False"/>
    <arg name="sensor_definition_file" default="$(find carla-carma-vehicle)/test/test_sensors.json"/>
    <arg name="vehicle_filter" default='vehicle.tesla.model3'/>

    <include file="$(find carla-carma-vehicle)/launch/carla-carma-vehicle.launch">
      <arg name='host' value='$(arg host)'/>
      <arg name='port' value='$(arg port)'/>
    </include>

    <include file="$(find carla-carma-vehicle)/launch/carla-carma-vehicle.launch">
        <arg name='host' value='$(arg host)'/>
        <arg name='port' value='$(arg port)'/>
        <arg name="vehicle_filter" value='$(arg vehicle_filter)'/>
        <arg name="sensor_definition_file" value='$(arg sensor_definition_file)'/>
    </include>

    <test test-name="testPublishedData" pkg="carla-carma-vehicle" type="carla-carma-vehicle.py" time-limit="20.0"/>
</launch>
